@page
@model MedicalCenterAppointmentApp.Pages.PatientList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-primary">Patient List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-primary text-white">Add A New Patient</a>
    </div>

    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model.Patients.Count() > 0)
            {
                <table class="table table-striped border table-hover">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Patients.FirstOrDefault().PatientId">ID</label>
                        </th>
                        <th>
                            <label asp-for="Patients.FirstOrDefault().PatientName">Name</label>
                        </th>
                        <th>
                            <label asp-for="Patients.FirstOrDefault().PatientPhone">Phone</label>
                        </th>
                        <th>
                            <label asp-for="Patients.FirstOrDefault().EmergencyContact">Emergency Contact</label>
                        </th>
                        <th>
                            <label asp-for="Patients.FirstOrDefault().EmergencyPhone">Emergency Phone</label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.Patients)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.PatientId)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.PatientName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.PatientPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.EmergencyContact)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.EmergencyPhone)
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm">Delete</button>
                                <button class="btn btn-info btn-sm">Edit</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p> No patients available</p>
            }
        </form>
    </div>
</div>
